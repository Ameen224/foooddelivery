  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;700&display=swap" rel="stylesheet">
  <style>
    @font-face {
      font-family: 'CustomFont';
      src: url('/fonts/custom-font.woff2') format('woff2'),
           url('/fonts/custom-font.ttf') format('truetype');
      font-weight: normal;
      font-style: normal;
    }
    
    body {
      font-family: 'CustomFont', sans-serif;
      color: white;
      background-color: #222831;
      overflow-x: hidden;
    }
    
    h1, h2, h3, h4, h5, h6 {
      font-family: 'Dancing Script', cursive;
    }
    
    /* Header & Footer */
    .header_section, .footer_section {
      background-color: #222831;
      padding: 15px 0;
    }
    
    .navbar-brand {
      font-family: 'Dancing Script', cursive;
      font-size: 2rem;
      font-weight: bold;
      color: #ffbe33 !important;
    }
    
    .navbar {
      padding: 0;
    }
    
    .navbar-toggler {
      background-color: #ffbe33;
      border: none;
    }
    
    .navbar-toggler-icon {
      background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='rgba(255, 255, 255, 1)' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3E%3C/svg%3E");
    }
    
    .navbar-nav .nav-item .nav-link {
      color: white;
      padding: 10px 15px;
      transition: all 0.3s ease;
    }
    
    .navbar-nav .nav-item .nav-link:hover,
    .navbar-nav .nav-item.active .nav-link {
      color: #ffbe33;
    }
    
    .user_option a {
      color: white;
      margin-left: 15px;
      font-size: 18px;
      transition: all 0.3s ease;
    }
    
    .user_option a:hover {
      color: #ffbe33;
    }
    
    #searchForm {
      display: flex;
      align-items: center;
    }
    
    #searchInput {
      border-radius: 20px 0 0 20px;
      border: none;
      background-color: #333;
      color: white;
    }
    
    #searchInput::placeholder {
      color: #aaa;
    }
    
    #searchForm button {
      border-radius: 0 20px 20px 0;
      background: #ffbe33;
      border: none;
      color: white;
    }
    
    /* About Section */
    .about_section {
      padding: 60px 0;
      color: white;
    }
    
    .about-content {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      margin-bottom: 40px;
    }
    
    .about-image {
      flex: 0 0 50%;
      max-width: 50%;
      padding: 0 15px;
      text-align: center;
    }
    
    .about-image img {
      max-width: 100%;
      height: auto;
      border-radius: 10px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
      transition: transform 0.3s ease;
    }
    
    .about-image img:hover {
      transform: scale(1.03);
    }
    
    .about-text {
      flex: 0 0 50%;
      max-width: 50%;
      padding: 0 15px;
    }
    
    .about-text h2 {
      font-size: 2.5rem;
      margin-bottom: 20px;
      color: #ffbe33;
    }
    
    .about-text p {
      font-size: 1.1rem;
      line-height: 1.8;
      margin-bottom: 20px;
      color: #e0e0e0;
    }
    
    /* Contact Form */
    .contact_form {
      background-color: #333;
      padding: 30px;
      border-radius: 10px;
      margin-top: 30px;
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
      box-shadow: 0 5px 20px rgba(0, 0, 0, 0.3);
    }
    
    .contact_form h3 {
      margin-bottom: 25px;
      text-align: center;
      color: #ffbe33;
    }
    
    .contact_form .form-control {
      background-color: #444;
      border: none;
      color: white;
      padding: 12px 15px;
      border-radius: 8px;
      margin-bottom: 15px;
    }
    
    .contact_form .form-control:focus {
      box-shadow: 0 0 0 3px rgba(255, 190, 51, 0.3);
    }
    
    .contact_form .btn-primary {
      background-color: #ffbe33;
      border: none;
      padding: 10px 25px;
      border-radius: 30px;
      font-weight: bold;
      transition: all 0.3s ease;
      width: 100%;
      margin-top: 10px;
    }
    
    .contact_form .btn-primary:hover {
      background-color: #e6a62b;
      transform: translateY(-3px);
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }
    
    .contact_form .btn-primary:active {
      transform: translateY(-1px);
    }
    
    .alert {
      margin-bottom: 15px;
      border-radius: 8px;
    }
    
    /* Footer styling */
    .footer_section {
      padding: 40px 0 20px;
      border-top: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    .footer_section h4 {
      margin-bottom: 20px;
      color: #ffbe33;
    }
    
    .footer_section p {
      color: #f1f1f1;
      margin-bottom: 10px;
    }
    
    .footer-logo h2 {
      color: #ffbe33;
      margin-bottom: 15px;
    }
    
    .footer_social {
      margin-top: 20px;
    }
    
    .footer_social a {
      color: white;
      margin-right: 15px;
      font-size: 18px;
      transition: all 0.3s ease;
    }
    
    .footer_social a:hover {
      color: #ffbe33;
    }
    
    /* Responsive Styles */
    @media (max-width: 991px) {
      .about-image, .about-text {
        flex: 0 0 100%;
        max-width: 100%;
      }
      
      .about-image {
        margin-bottom: 30px;
      }
      
      .user_option {
        margin-top: 10px;
      }
      
      #searchForm {
        margin-bottom: 10px;
      }
    }
    
    @media (max-width: 767px) {
      .navbar-nav {
        background-color: rgba(34, 40, 49, 0.95);
        border-radius: 0 0 10px 10px;
        padding: 10px;
      }
      
      .user_option {
        flex-wrap: wrap;
        justify-content: center;
      }
      
      .footer_section .col-md-4 {
        text-align: center !important;
        margin-bottom: 30px;
      }
      
      .about-text h2 {
        font-size: 2rem;
        text-align: center;
      }
      
      .about-text p {
        text-align: center;
      }
      
      .contact_form {
        padding: 20px;
      }
    }
    
    @media (max-width: 575px) {
      .user_option {
        width: 100%;
      }
      
      #searchForm {
        width: 100%;
        margin-bottom: 15px;
      }
      
      #searchInput {
        width: 100%;
      }
      
      .about-text h2 {
        font-size: 1.8rem;
      }
      
      .about-text p {
        font-size: 1rem;
      }
      
      .contact_form h3 {
        font-size: 1.5rem;
      }
      
      .contact_form {
        padding: 15px;
      }
    }
  </style>
</head>
<body>
