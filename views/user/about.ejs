  <!-- Scripts -->
  <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  <script>
    $(document).ready(function(){
      // Contact form submission
      $('#contactForm').submit(function(event) {
        event.preventDefault();
        
        // Get form data
        const name = $('#contactName').val();
        const email = $('#contactEmail').val();
        const message = $('#contactMessage').val();
        
        // Validate form data
        if (!name || !email || !message) {
          showAlert('Please fill in all fields', 'danger');
          return;
        }
        
        if (!isValidEmail(email)) {
          showAlert('Please enter a valid email address', 'danger');
          return;
        }
        
        // Send data to backend using Fetch API
        fetch('/user/api/contact', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            name: name,
            email: email,
            message: message
          })
        })
        .then(response => {
          if (!response.ok) {
            throw new Error('Network response was not ok');
          }
          return response.json();
        })
        .then(data => {
          showAlert('Message sent successfully!', 'success');
          $('#contactForm')[0].reset();
        })
        .catch(error => {
          showAlert('Error sending message. Please try again later.', 'danger');
          console.error('Error:', error);
        });
      });
      
      // Helper function to validate email
      function isValidEmail(email) {
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        return emailRegex.test(email);
      }
      
      // Helper function to show alert messages
      function showAlert(message, type) {
        const alertDiv = $(`<div class="alert alert-${type} alert-dismissible fade show" role="alert">
                            ${message}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                            </button>
                          </div>`);
        
        // Insert alert in the alert container
        $('#alertContainer').html(alertDiv);
        
        // Auto-remove alert after 5 seconds
        setTimeout(function() {
          alertDiv.alert('close');
        }, 5000);
      }
      
      // Adjust header on scroll
      $(window).scroll(function() {
        if ($(this).scrollTop() > 50) {
          $('.header_section').css({
            'position': 'fixed',
            'top': '0',
            'left': '0',
            'right': '0',
            'zIndex': '1000',
            'boxShadow': '0 2px 10px rgba(0,0,0,0.2)',
            'transition': 'all 0.3s ease'
          });
        } else {
          $('.header_section').css({
            'position': '',
            'boxShadow': ''
          });
        }
      });
    });
  </script>
</body>
